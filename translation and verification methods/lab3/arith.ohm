Arithmetic {
    Expr = AddExpr
    
    AddExpr = MulExpr (("+" | "-") MulExpr)*
    
    MulExpr = UnaryExpr (("*" | "/") UnaryExpr)*
    
    UnaryExpr = "-" UnaryExpr  -- neg
              | PrimaryExpr    -- pos
    
    PrimaryExpr = "(" Expr ")"  -- paren
                | number        -- num
                | variable      -- var
    
    variable = letter (letter | digit)*
    
    number = digit+
}
